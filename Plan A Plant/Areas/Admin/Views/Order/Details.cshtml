                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>

                            <ul class="list-group mb-3">
                                @foreach (var detail in Model.OrderDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-primary">@detail.Product.Name</h6>
                                                <small class="text-muted">Price : @detail.Price</small><br />
                                                <small class="text-muted">Quantity :@detail.Count </small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@((detail.Count * detail.Price))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">TOTAL(&#x20B9) </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderHeader.OrderTotal</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (Model.OrderHeader.CancellationStatus == SD.StatusPending && User.IsInRole(SD.Role_Admin))
           
                            {
                                <div class="row my-1">
                                    <div class="col-3">Cancellation Reason</div>
                                    <div class="col-9">
                                        @if (User.IsInRole(SD.Role_Admin))
                                        {
                                            <input asp-for="OrderHeader.CancellationReason" readonly type="text" class="form-control" />
                                        }

                                    </div>
                                </div>
                            }


                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                @if (Model.OrderHeader.OrderStatus == SD.StatusApproved && Model.OrderHeader.CancellationStatus !=SD.StatusPending)
                                {
                                    <button type="submit" asp-action="StartProcessing"
                                        class="btn btn-primary form-control my-1">Start Processing</button>
                                }
                                @if (Model.OrderHeader.OrderStatus == SD.StatusInProcess)
                                {
                                    <button type="submit" asp-action="ShipOrder" onclick="return validateInput()" class="btn btn-primary form-control my-1">Ship Order</button>
                                }


                                @if (Model.OrderHeader.OrderStatus == SD.StatusShipped)
                                {
                                    <button type="submit" asp-action="Delivered"
                                            class="btn btn-primary form-control my-1">
                                        Delivered
                                    </button>
                                }

                            }
                            @if (Model.OrderHeader.OrderStatus != SD.StatusRefunded  &&
                            Model.OrderHeader.OrderStatus != SD.StatusCancelled && User.IsInRole(SD.Role_User) && Model.OrderHeader.CancellationStatus !=SD.StatusPending)

                            {
                                
                                <div class="form-group">
                                    <label>Cancellation Reason</label>
                                    
                                    <select name="reason" id="cancellationReason" class="form-control" required>
                                        <option value="">Select a reason</option>
                                        <option value="Found a better price elsewhere">Found a better price elsewhere</option>
                                        <option value="Product is no longer needed">Product is no longer needed</option>
                                        <option value="Ordered by mistake">Ordered by mistake</option>
                                        <option value="Product did not meet expectations">Product did not meet expectations</option>
                                        <option value="Shipping time was too long">Shipping time was too long</option>
                                        <option value="Changed my mind">Changed my mind</option>
                                        <option value="Duplicate order">Duplicate order</option>
                                        <option value="Product is out of stock">Product is out of stock</option>
                                        <option value="Received as a gift">Received as a gift</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="CancellationRequest.Reason" class="text-danger"></span>
                                    <div id="cancellationReasonWarning" class="text-danger" style="display: none;">Please provide a reason for cancellation.</div>
                                </div>
                                <button type="submit" asp-action="CancelOrder" class="btn btn-danger form-control my-1" onclick="return validateCancellationReason()">Cancel Order</button>


                            }
                            
                            @if (Model.OrderHeader.OrderStatus != SD.StatusRefunded  &&
                            Model.OrderHeader.OrderStatus != SD.StatusCancelled && User.IsInRole(SD.Role_Admin) && Model.OrderHeader.CancellationStatus !=SD.StatusPending)

                            {
                                <button type="submit" asp-action="CancelOrder" class="btn btn-danger form-control my-1">Cancel Order</button>

                            }

                            @if (Model.OrderHeader.CancellationStatus==SD.StatusPending
                            && User.IsInRole(SD.Role_Admin))
                            {
                                <div class="mt-3">
                                    <button type="submit" asp-action="ApproveCancellation" class="btn btn-success">Approve</button>
                                   @*  <button type="submit" asp-action="RejectCancellation" class="btn btn-danger">Reject</button> *@
                                </div>
                                
                            }
                           
                                
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

