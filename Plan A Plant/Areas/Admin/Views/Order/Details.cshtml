@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function validateInput() {
            if (document.getElementById("trackingNumber").value == "") {
                swal.fire({
                    icon: 'error',
                    title: 'Oops.....',
                    text: 'Please enter tracking number',
                });
                return false;
            }
            if (document.getElementById("carrier").value == "") {
                swal.fire({
                    icon: 'error',
                    title: 'Oops.....',
                    text: 'Please enter Carrier ',
                });
                return false;
            }
            return true;
        }
        function validateCancellationReason() {
            var cancellationReason = document.getElementById("cancellationReason").value;
            var warningDiv = document.getElementById("cancellationReasonWarning");

            if (cancellationReason.trim() === "") {
                warningDiv.style.display = "block";
                return false;
            } else {
                warningDiv.style.display = "none";
                return true;
            }
        }


       
    </script>
}
