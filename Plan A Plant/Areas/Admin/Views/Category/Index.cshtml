@model List<Category>
<partial name="_Notifications" />

<div class="card shadow border-0 mt-4" style="max-width: 70%; margin: 0 auto;">
    <div class="card-header bg-primary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pt-4 pb-1">
                <div class="col-md-6">
                    <!-- Left side content (empty) -->
                </div>
                <div class="col-md-6 text-end">
                    <!-- Right side content: "Create New Category" button -->
                    <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
                        <i class="fas fa-plus-circle"></i> Create New Category
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Display Order</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                        {
                            <tr>
                                <td>@obj.Name</td>
                                <td>@obj.DisplayOrder</td>
                                <td>@obj.Description</td>
                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-outline-primary mx-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-outline-danger mx-2">
                                            <i class="bi bi-pencil-square"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
