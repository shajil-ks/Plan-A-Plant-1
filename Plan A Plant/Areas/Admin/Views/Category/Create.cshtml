@model Category

<div class="card shadow border-0 mt-4" style="max-width: 70%; margin: 0 auto;">
    <div class="card-header bg-primary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        
        <form method="post">
            <div class="container border p-3 mt-4">
                <div class="row pb-2">
                    </div>
                <div class="row mb-3">

                    <div class="col-md-6">
                        <label class="p-0">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="p-0">Display Order</label>
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="p-0">Description</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IsActive"></label>
                        <select asp-for="IsActive" class="form-control border-0 shadow">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-2">
                        <button type="submit" class="btn btn-primary btn-block">Create</button>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-2">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-block">Return</a>
                    </div>
                </div>
            </div>
        </form>


    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
