@model Category

<div class="card shadow border-0 mt-4" style="max-width: 70%; margin: 0 auto;">
    <div class="card-header bg-primary bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" id="deleteForm">
            <input asp-for="Id" hidden />
            <div class="container border p-3 mt-4">
                <div class="row pb-2">
                </div>
                <div class="row mb-3">

                    <div class="col-md-6">
                        <label class="p-0">Name</label>
                        <input asp-for="Name" disabled class="form-control" />

                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="p-0">Display Order</label>
                        <input asp-for="DisplayOrder" disabled class="form-control" />

                    </div>
                    <div class="col-md-6">
                        <label class="p-0">Description</label>
                        <input asp-for="Description" disabled class="form-control" />

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-2">
                        <button type="button" class="btn btn-danger btn-block" onclick="confirmDelete()">Delete</button>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-2">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-block">Return</a>
                    </div>
                </div>
            </div>
        </form>


    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function confirmDelete() {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $('#deleteForm').submit(); // Submit the form after confirmation
                }
            })
        }
    </script>
}
