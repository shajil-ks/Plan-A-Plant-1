@model DashboardVM
@using System.Globalization

<section class="content-main">
    <div class="content-header">
        <div class="align-content-center text-center">
            <h1 class="content-title card-title">DASHBOARD</h1>
            <p>Whole Data About Your Business Here...</p>
        </div>

        <div class="mb-2">
            <a asp-action="Invoice" asp-controller="DashBoard" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Create report</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-primary-light"><i class="text-primary material-icons md-monetization_on"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Revenue</h6>
                        <span>@Model.TotalSales.ToString("c", new System.Globalization.CultureInfo("en-IN"))</span>
                        <span class="text-sm">
                            The Entire Total Amount
                        </span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-success-light"><i class="text-success material-icons md-local_shipping"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Orders</h6> <span>@Model.OrderCount</span>
                        <span class="text-sm">
                            The Entire Order.
                        </span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-warning-light"><i class="text-warning material-icons md-qr_code"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Products</h6> <span>@Model.ProductCount</span>
                       @*  <span class="text-sm">
                            @Model.CategoryCount Categories.
                        </span> *@
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-success-light"><i class="text-warning material-icons md-qr_code"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Categories</h6> <span>@Model.CategoryCount</span>

                    </div>
                </article>
            </div>
        </div>


    </div>
    @* .................................................................................. *@
    <div class="row">
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-info-light"><i class="text-info material-icons md-shopping_basket"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Weekly Orders</h6> <span>@Model.NumberOfOrdersLastWeek</span>
                        <span class="text-sm">
                            Last Week Orders
                        </span>
                    </div>
                </article>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-primary-light"><i class="text-success material-icons md-local_shipping"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Shipped Products</h6>
                        <span>@Model.ShippedCount</span>
                        <span class="text-sm">
                            Shipping Products
                        </span>
                    </div>
                </article>
            </div>
        </div>

        

        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-warning-light"><i class="text-warning material-icons md-qr_code"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Cancelled </h6> <span>@Model.CancelledCount</span>
                        <span class="text-sm">
                            Products that are Cancelled.
                        </span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <div class="notification-dot bg-success blinking-dot"></div>
                    <span class="icon icon-sm rounded-circle bg-info-light bg-success-light"><i class="text-primary material-icons md-monetization_on"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Weekly Earning</h6> <span>@Model.TotalRevenueLastWeek</span>
                        <span class="text-sm">
                            Weekly Revenue.
                        </span>
                    </div>
                </article>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card mb-4">
                <article class="card-body">
                    <h5 class="card-title">Sale statistics</h5>
                    <canvas id="myChart" height="80px"></canvas>
                </article>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                    <h4 class="card-title">Latest Orders</h4>
                </div>
                <div class="col-md-2 col-6">
                    <a asp-action="Index" asp-controller="Order" class="btn btn-primary btn-xs">Manage Order</a>
                </div>
            </div>
        </header>
        <div class="card-body">
            <div class="table-responsive">
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="align-middle" scope="col">Order ID</th>
                                <th class="align-middle" scope="col">Customer Name</th>
                                <th class="align-middle" scope="col">Date</th>
                                <th class="align-middle" scope="col">Total</th>
                                <th class="align-middle" scope="col">Payment Status</th>
                                <th class="align-middle" scope="col">Phone Number</th>
                                <th class="align-middle" scope="col">View Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.orderHeader)
                            {
                                <tr>

                                    <td><a href="#" class="fw-bold"></a>@order.Id</td>
                                    <td>@order.ApplicationUser.Name</td>
                                    <td>
                                        @order.OrderDate.Date.ToShortDateString()
                                    </td>
                                    <td>
                                        @order.OrderTotal.ToString("c", new System.Globalization.CultureInfo("en-IN"))
                                    </td>
                                    @if (order.PaymentStatus == SD.PaymentStatusApproved)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-success">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    else if (order.PaymentStatus == SD.StatusCancelled)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-danger">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    else if (order.PaymentStatus == SD.StatusPending)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-warning">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    else if (order.PaymentStatus == SD.StatusRefunded)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-info">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    <td>
                                        @order.MobileNumber
                                    </td>

                                    <td>
                                        <a asp-action="Details" asp-controller="Order" asp-route-orderId="@order.Id" class="btn btn-primary btn-sm">View details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="pagination-area mt-30 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                @if (Model.CurrentPage > 1)
                {

                    <li class="page-item"><a href="?page=@(Model.CurrentPage - 1)&itemsPerPage=@Model.ItemsPerPage">Prev</a></li>
                }
                @for (int i = Math.Max(1, Model.CurrentPage - 4); i <= Math.Min(Model.CurrentPage + 4, Math.Ceiling((double)Model.NumberOfOrdersLastWeek / Model.ItemsPerPage)); i++)
                {

                    if (Model.CurrentPage == i)
                    {
                        <span> </span>
                    }

                }
                @if (Model.CurrentPage < Math.Ceiling((double)Model.NumberOfOrdersLastWeek / Model.ItemsPerPage))
                {
                    <li class="page-item"><a href="?page=@(Model.CurrentPage + 1)&itemsPerPage=@Model.ItemsPerPage">Next</a></li>


                }
            </ul>
        </nav>
    </div>


    @*  .................................................................................................................... *@
    <div class="col-md-12 row mb-5">
        <div class="card mb-4 col-md-7 mr-">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                        <h4 class="card-title">Products</h4>
                    </div>
                    <div class="col-md-2 col-6">
                        <a asp-action="Index" asp-controller="Product" class="btn btn-primary btn-sm">Product Stocks</a>
                    </div>
                </div>
            </header>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="align-middle" scope="col">Product ID</th>
                                    <th class="align-middle" scope="col">Product Name</th>
                                    <th class="align-middle" scope="col">Amount</th>
                                    <th class="align-middle" scope="col">Quantity</th>
                                    <th class="align-middle" scope="col">Quantity Status</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var order in Model.product)
                                {
                                    @if (order.Qty <= 0 || order.Qty <= 5)
                                    {
                                        <tr>

                                            <td><a href="#" class="fw-bold"></a>@order.Id</td>
                                            <td>@order.Name</td>
                                            <td>
                                                @order.Price.ToString("c", new System.Globalization.CultureInfo("en-IN"))
                                            </td>
                                            <td>
                                                @order.Qty
                                            </td>
                                            @if (order.Qty <= 0)
                                            {
                                                <td>
                                                    <span class="badge badge-pill badge-soft-danger">Out Of Stock</span>
                                                </td>
                                            }
                                            else if (order.Qty <= 5 && order.Qty != 0)
                                            {
                                                <td>
                                                    <span class="badge badge-pill badge-soft-warning">Few More left</span>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-4 col-md-5">
            <header class="card-header">
                <div class="row">
                    <div class="col-md-3 me-auto mb-md-0 mb-3">
                        <h5 class="card-title fw-bold"></h5>
                    </div>
                    <div class="col-md-2 col-6">
                        <a asp-action="Index" asp-controller="Category" class="btn btn-primary btn-xs">View</a>
                    </div>
                </div>
            </header>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="align-middle" scope="col">Category Names</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var order in Model.categors)
                                {
                                    <tr>

                                        <td>@order.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>





</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $.ajax({
            type: "POST",
            url: "/Admin/DashBoard/Index",
            data: {},
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: OnSuccessResult,
            error: OnError
        });
        function OnSuccessResult(data) {
            var _data = data;
            var chartLabels = data.chartLabels;
            var chartData = data.chartData;

            var barColor = ["orange", "purple", "red"];
            console.log("Server Response:", data);
            console.log("Chart Labels:", chartLabels);
            console.log("Chart Data:", chartData);
            new Chart("myChart", {
                type: "bar",
                data: {
                    labels: chartLabels,
                    datasets: [{
                        backgroundColor: barColor,
                        data: chartData
                    }]
                }
            });
        }
        function OnError(err) {

        }
    });
</script>