@model Plan_A_Plant.Models.Offer

<h2 class="text-center mt-4">Delete Offer</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center text-danger">Are you sure you want to delete this offer?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Offer Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OfferName)</dd>

                        <dt class="col-sm-4">Offer Type</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Offertype)</dd>

                        <dt class="col-sm-4">Product/Category Name</dt>
                        <dd class="col-sm-8">
                            @if (Model.Offertype == Plan_A_Plant.Models.Offer.OfferType.Product)
                            {
                                @Model.Product?.Name
                            }
                            else if (Model.Offertype == Plan_A_Plant.Models.Offer.OfferType.Category)
                            {
                                @Model.Category?.Name
                            }
                        </dd>

                        <dt class="col-sm-4">Discount</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OfferDiscount)</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OfferDescription)</dd>
                    </dl>

                    <div class="text-center mt-4">
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="OfferId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>