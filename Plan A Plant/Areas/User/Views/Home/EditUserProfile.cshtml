@model ApplicationUser

@section css {
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Edit User Profile</h3>
                        <form method="post">
                            <input asp-for="Id" type="hidden" />
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="row">
                                <div class="form-floating mb-4 col-md-6">
                                    <input asp-for="Name" class="form-control" placeholder="Name" />
                                    <label asp-for="Name">Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4 col-md-6">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" />
                                    <label asp-for="PhoneNumber">Phone number</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-floating mb-4 col-md-6">
                                    <input asp-for="StreetAddress" class="form-control" placeholder="Street Address" />
                                    <label asp-for="StreetAddress">Street Address</label>
                                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4 col-md-6">
                                    <input asp-for="City" class="form-control" placeholder="City" />
                                    <label asp-for="City">City</label>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-floating mb-4 col-md-6">
                                    <input asp-for="State" class="form-control" placeholder="State" />
                                    <label asp-for="State">State</label>
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4 col-md-6">
                                    <input asp-for="PostalCode" class="form-control" placeholder="Postal Code" />
                                    <label asp-for="PostalCode">Postal Code</label>
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Save" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
      <partial name="_ValidationScriptsPartial" />
}